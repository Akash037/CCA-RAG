# Development environment configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/rag_dev.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
RAG_DOCUMENT_CORPUS_ID=your-dev-document-corpus-id
RAG_MEMORY_CORPUS_ID=your-dev-memory-corpus-id

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-dev-drive-folder-id
GOOGLE_DRIVE_TOKEN_PATH=./credentials/drive_token.json
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/drive_credentials.json
ENABLE_GOOGLE_DRIVE_SYNC=false
AUTO_SYNC_DRIVE=false
DRIVE_SYNC_INTERVAL_HOURS=1

# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID=your-dev-sheets-spreadsheet-id
GOOGLE_SHEETS_TOKEN_PATH=./credentials/sheets_token.json
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/sheets_credentials.json
ENABLE_GOOGLE_SHEETS_LOGGING=false
SHEETS_BATCH_SIZE=10
SHEETS_FLUSH_INTERVAL=60

# Security
SECRET_KEY=dev-secret-key-not-for-production
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Performance Configuration
MAX_RETRIEVAL_DOCUMENTS=5
SIMILARITY_THRESHOLD=0.6
HYBRID_SEARCH_ALPHA=0.5
ENABLE_RERANKING=false
MAX_DOCUMENT_LENGTH=5000

# Memory Configuration
MEMORY_TTL_HOURS=1
SESSION_TIMEOUT_MINUTES=10
MAX_CONVERSATION_HISTORY=20

# Model Configuration
GENERATION_MODEL=gemini-1.5-flash
EMBEDDING_MODEL=text-embedding-004

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=colored
