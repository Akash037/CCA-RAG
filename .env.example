# Environment Configuration Template
# Copy to .env and fill in your values

# ========================
# GCP Configuration
# ========================
GOOGLE_CLOUD_PROJECT=cca-rag
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ========================
# Vertex AI Configuration
# ========================
VERTEX_AI_LOCATION=us-central1
RAG_DOCUMENT_CORPUS_ID=your-document-corpus-id
RAG_MEMORY_CORPUS_ID=your-memory-corpus-id
EMBEDDING_MODEL=text-embedding-005
GENERATION_MODEL=gemini-2.0-flash

# ========================
# Google Drive Integration
# ========================
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
DRIVE_SYNC_INTERVAL=300  # seconds

# ========================
# Google Sheets Logging
# ========================
GOOGLE_SHEETS_ID=your-google-sheets-id
SHEETS_WORKSHEET_NAME=RAG_Logs

# ========================
# Database Configuration
# ========================
# Cloud SQL
DATABASE_URL=postgresql+asyncpg://user:password@/dbname?host=/cloudsql/project:region:instance

# Local Development
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ragdb

# ========================
# Redis Configuration
# ========================
REDIS_URL=redis://localhost:6379/0
# For Cloud Memorystore: redis://your-memorystore-ip:6379/0

# ========================
# Application Settings
# ========================
APP_NAME=Advanced RAG System
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Configuration
API_V1_PREFIX=/api/v1
MAX_QUERY_LENGTH=1000
MAX_RESPONSE_LENGTH=4000

# ========================
# Memory Configuration
# ========================
SESSION_TIMEOUT=3600  # 1 hour
SHORT_TERM_MEMORY_TTL=86400  # 24 hours
MAX_CONVERSATION_HISTORY=50

# ========================
# RAG Configuration
# ========================
MAX_RETRIEVAL_DOCUMENTS=10
SIMILARITY_THRESHOLD=0.7
HYBRID_SEARCH_ALPHA=0.6  # 60% semantic, 40% keyword
ENABLE_RERANKING=true

# ========================
# Performance & Limits
# ========================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# ========================
# Monitoring & Logging
# ========================
LOG_LEVEL=INFO
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn

# ========================
# Development Settings
# ========================
RELOAD=true
HOST=0.0.0.0
PORT=8000
